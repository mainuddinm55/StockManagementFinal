<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_internet" />

        <TextView
            android:id="@+id/oops_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_image_view"
            android:layout_centerHorizontal="true"
            android:text="Ooops"
            android:textSize="40sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/no_internet_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/oops_text_view"
            android:layout_centerHorizontal="true"
            android:text="@string/internet_connection_text"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/try_again_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@color/colorPrimary"
            android:text="Try Again"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_below="@id/no_internet_text_view"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>