<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="6">

    <TextView
        android:id="@+id/product_id_textview"
        style="@style/TextViewPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="@string/id_text" />

    <TextView
        android:id="@+id/product_name_textview"
        style="@style/TextViewPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:textAlignment="viewStart"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="@string/product_name_text"
        android:gravity="start" />

    <TextView
        android:id="@+id/purchase_qty_text_view"
        style="@style/TextViewPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="@string/purchase_qty_text" />

    <TextView
        android:id="@+id/sell_quantity_text_view"
        style="@style/TextViewPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="@string/sell_qty_text" />

    <TextView
        android:id="@+id/stock_hand_text_view"
        style="@style/TextViewPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="@string/stock_hand_text"
        android:gravity="end" />

</LinearLayout>