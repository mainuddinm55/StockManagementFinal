<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="6">

    <TextView
        android:id="@+id/product_id_text_view"
        style="@style/TextViewPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        tools:text="@string/id_text"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/product_name_text_view"
        style="@style/TextViewPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        tools:text="@string/product_name_text"
        android:textAlignment="viewStart"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:gravity="start" />

    <TextView
        android:id="@+id/sell_qty_text_view"
        style="@style/TextViewPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        tools:text="@string/sell_qty_text"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/total_sell_amount_text_view"
        style="@style/TextViewPadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        tools:text="@string/total_sell_amount"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:gravity="end" />


</LinearLayout>